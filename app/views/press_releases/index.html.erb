<p id="notice"><%= notice %></p>

<h1>Press Releases</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Subheadline</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @press_releases.each do |press_release| %>
      <tr>
        <td><%= press_release.headline %></td>
        <td><%= press_release.subheadline %></td>
        <td><%= press_release.body %></td>
        <td><%= link_to 'Show', press_release %></td>
        <td><%= link_to 'Edit', edit_press_release_path(press_release) %></td>
        <td><%= link_to 'Destroy', press_release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Press Release', new_press_release_path %>
